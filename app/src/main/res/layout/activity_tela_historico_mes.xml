<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doa_facil"
    tools:context=".View.Tela_Historico_Mes">

    <View
        android:id="@+id/background_cadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        tools:layout_editor_absoluteX="-85dp"
        tools:layout_editor_absoluteY="-20dp" />

    <TextView
        android:id="@+id/txt_titulo_hist_mes"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="@string/txt_hist_mes"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cod"
        />

    <TextView
        android:id="@+id/txt_cod"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/txt_hist_cod"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_hist_mes"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_cod"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_hist_mes"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_mes"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="@string/txt_hist_mes_escolhido"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cod"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_mes"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_cod"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_hist_meta"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_hist_meta"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mes"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_meta"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_mes"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_total_doadores"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="33dp"
        android:text="@string/txt_hist_total_doadores"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hist_meta"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_total_doadores"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_meta"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_hist_arrecadado"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="18dp"
        android:text="@string/txt_hist_arrecadacao"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_doadores"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_arecadado"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_total_doadores"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_hist_status"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_hist_status"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hist_arrecadado"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_status"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColorHint="@color/white"
        android:text="@string/txt_hist_finalizado"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/bg_hist_status_finalizado"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_arecadado"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_hist_descricao"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="@string/txt_hist_descricao"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hist_status"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_descricao"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:maxLines="4"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_txt_descricao"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_status"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancelar_hist_mes"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="@string/btn_cancelar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_sair"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_descricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_atelie"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_imprimir_hist_mes"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="@string/btn_hist_imprimir_campanha"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_organizacao"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_descricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_atelie"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_atelie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_roda_pe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>