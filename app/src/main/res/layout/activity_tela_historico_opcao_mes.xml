<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doa_facil"
    tools:context=".View.Tela_Historico_opcao_mes">

    <View
        android:id="@+id/background_cadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txt_titulo_hist_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_opcao_mes"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mes_camp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_mes_camp"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="25dp"
        android:text="@string/txt_mes_escolhido"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_hist_mes"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_mes_ecolhido"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_edit_password"
        android:layout_marginTop="130sp"
        android:layout_marginEnd="25dp"
        android:padding="15dp"
        android:hint="@string/txt_hint_opcao_mes"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_hist_mes"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_opcao_mes_salvar"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_btn_organizacao"
        android:text="@string/btn_proximo"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txt_atelie"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_opcao_mes_cancelar"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_btn_sair"
        android:text="@string/btn_cancelar"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txt_atelie"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_atelie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_roda_pe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>