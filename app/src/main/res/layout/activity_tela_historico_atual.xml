<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doa_facil"
    tools:context=".View.Tela_Historico_Atual">

    <View
        android:id="@+id/background_cadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        tools:layout_editor_absoluteX="-85dp"
        tools:layout_editor_absoluteY="-20dp" />

    <TextView
        android:id="@+id/txt_camp_atual"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/txt_titulo_camp_atual"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_cod"
        />

    <TextView
        android:id="@+id/txt_camp_cod"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/txt_camp_cod"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_atual"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_cod_camp"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_atual"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_camp_mes"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/txt_camp_mes_atual"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_cod"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_camp_mes_atual"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_cod_camp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_camp_meta"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_camp_meta"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_mes"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_meta_camp"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_camp_mes_atual"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_total_doadores_camp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_camp_total_doadores"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_meta"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_total_doadores_camp"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_meta_camp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_camp_arrecadado"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/txt_camp_arrecadacao"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_doadores_camp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_arecadado_camp"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_total_doadores_camp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_camp_status"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_camp_status"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_arrecadado"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_status_camp"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:textColorHint="@color/white"
        android:text="@string/txt_camp_ativo"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/bg_camp_status"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_arecadado_camp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_camp_descricao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_camp_descricao"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_camp_status"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_retorno_descricao_camp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_txt_descricao"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_status_camp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sair_camp_atual"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/btn_sair"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_sair"
        app:layout_constraintTop_toBottomOf="@+id/txt_retorno_descricao_camp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_atelie"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_atelie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_roda_pe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>